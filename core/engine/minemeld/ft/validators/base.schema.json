{
    "$id": "https://github.com/PaloAltoNetworks/minemeld/ft/base.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Config schema for minemeld.ft.base.BaseFT class",
    "type": "object",
    "required": [],
    "properties": {
        "infilters": {
            "type": "array",
            "description": "input filters",
            "items": {
                "$ref": "#/$defs/filter"
            }
        },
        "outfilters": {
            "type": "array",
            "description": "output filters",
            "items": {
                "$ref": "#/$defs/filter"
            }
        }
    },
    "$defs": {
        "filter": {
            "type": "object",
            "required": [
                "actions"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the filter"
                },
                "conditions": {
                    "type": "array",
                    "description": "The list of conditions to match",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                },
                "actions": {
                    "type": "array",
                    "description": "The list of actions to apply",
                    "minItems": 1,
                    "maxItems": 1,
                    "items": {
                        "type": "string",
                        "enum": [
                            "drop",
                            "accept"
                        ]
                    }
                }
            }
        }
    }
}