{
    "$id": "https://github.com/PaloAltoNetworks/minemeld/ft/base.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Config schema for minemeld.ft.http.HttpFT class",
    "type": "object",
    "required": [
        "url"
    ],
    "properties": {
        "url": {
            "type": "string"
        },
        "polling_timeout": {
            "type": "integer",
            "minimum": 5
        },
        "verify_cert": {
            "type": "boolean"
        },
        "user_agent": {
            "type": "string"
        },
        "ignore_regex": {
            "type": "string"
        },
        "encoding": {
            "type": "string"
        },
        "indicator": {
            "$ref": "#/$defs/extractdict"
        },
        "fields": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                    "$ref": "#/$defs/extractdict"
                }
            }
        }
    },
    "$defs": {
        "extractdict": {
            "type": "object",
            "required": [
                "regex"
            ],
            "properties": {
                "regex": {
                    "type": "string"
                },
                "transform": {
                    "type": "string"
                }
            }
        }
    }
}